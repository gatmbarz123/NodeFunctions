pipeline{
    agent any

    stages{
        stage("Checkout"){
            steps{
                git branch: 'main' , url: 'https://github.com/gatmbarz123/NodeFunctions.git'
            }
        }
    }

    
        stage("Read File"){
            steps{
                buildConfig =  readYaml file: 'build-config.yaml'
            }
        }
    


        stage('Build for test '){
            steps{
                script{
                    buildConfig.steps.each {steps ->
                        stage(step.name){
                            sh step.command 
                        }
                    }
                }
            }
        }
}

